@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="margin: 10px">Yeni Kategori Sayfası</h2>
<form class="from-group" method="post">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.KategoriAd, new { @class="form-control" })  
    <button style="margin-top: 20px" class="btn btn-info">Kaydet</button>
</form>

