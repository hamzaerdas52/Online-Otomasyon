@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="margin: 10px">Satış Hareketleri Listesi</h2>
<br />
<table id="TblSatisIndex" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var sh in Model)
    {
        <tr>
            <td>@sh.SatisId</td>
            <td>@sh.Urun.UrunAd</td>
            <td>@sh.Cari.CariAd @sh.Cari.CariSoyad</td>
            <td>@sh.Personel.PersonelAd @sh.Personel.PersonelSoyad</td>
            <td>@sh.Adet</td>
            <td>@sh.Fiyat</td>
            <td>@sh.ToplamTutar</td>
            <td>@sh.Tarih</td>
            <td><a href="/Satis/SatisGetir/@sh.SatisId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@sh.SatisId" class="btn btn-dark">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-primary">Satış Yap</a>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/responsive/2.2.7/css/responsive.dataTables.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/responsive/2.2.7/js/dataTables.responsive.min.js"></script>

<script>
    $('#TblSatisIndex').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>

